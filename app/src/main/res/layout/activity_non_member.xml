<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".NonMemberActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/ic_loginscroll">


            <TextView
                android:id="@+id/tvNonMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_edittext"
                android:padding="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="25dp"
                android:ems="10"
                android:hint="Enter your name"
                android:fontFamily="@font/opensans_regular"
                android:inputType="textPersonName"
                android:text="" />


            <EditText
                android:id="@+id/etDobNM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/rounded_edittext"
                android:textCursorDrawable="@drawable/color_cursor"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter your Date of Birth"
                android:inputType="date"
                android:padding="10dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/rounded_edittext"
                android:textCursorDrawable="@drawable/color_cursor"
                android:ems="10"
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter your email Id"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tvInstitute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="#2f4f4f"
                android:paddingHorizontal="35dp"
                android:text="Organisation/Institute?" />

            <EditText
                android:id="@+id/etInstitute"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_edittext"
                android:textCursorDrawable="@drawable/color_cursor"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:ems="10"

                android:fontFamily="@font/opensans_regular"
                android:hint="Place of work/school/college"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/tvBlank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingHorizontal="34dp"
                android:textColor="#708090"
                android:fontFamily="@font/opensans_regular"
                android:text="(Leave it Blank if retired)" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="35dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="#2f4f4f"
                android:text="Are you a:" />

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >



                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="#429DD2"
                    android:checked="true"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingHorizontal="35dp"
                    android:text="Female"
                    android:textColor="#708090" />

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="#429DD2"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingHorizontal="35dp"
                    android:text="Male"
                    android:textColor="#708090" />

                <RadioButton
                    android:id="@+id/rbOther"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="#429DD2"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingHorizontal="35dp"
                    android:text="Other"
                    android:textColor="#708090" />
            </RadioGroup>

            <ProgressBar
                android:id="@+id/nonmemberPb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/darkblue"
                android:layout_gravity="center"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnForward"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/opensans_bold"
                android:text="NEXT"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>


    </ScrollView>






</LinearLayout>