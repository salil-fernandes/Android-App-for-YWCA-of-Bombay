<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d4f1ff"
    tools:context=".navigation.contactUs.tab3">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="350dp"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ics1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="15dp"

            android:background="@drawable/rounded_edittext"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/name5"
                android:textColor="#429DD2"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:autoLink="all"
                android:baselineAligned="false"
                android:padding="2dp"
                android:text="@string/address8"
                android:textAlignment="center"
                android:textColor="#000"
                android:fontFamily="@font/opensans_regular"
                android:textColorLink="#429DD2"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorLink="#0B2098"
                android:layout_marginBottom="10dp"
                android:textSize="17sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_edittext"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"

                android:text="ASHA KIRAN"
                android:textColor="#429DD2"
                android:textSize="23sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:autoLink="all"
                android:fontFamily="@font/opensans_regular"
                android:padding="@dimen/cardview_default_elevation"
                android:text="@string/address0"
                android:textAlignment="center"

                android:textColor="#000"
                android:textColorLink="#429DD2"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorLink="#0B2098"
                android:textSize="17sp" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>