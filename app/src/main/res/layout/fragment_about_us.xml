<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.aboutUs.AboutUsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="500dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/empe" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/ywca_of_bombay_our_story"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="cursive" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="12dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/about_description_txt"
                android:textColor="#7B130B0B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:autoLink="all"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textColorLink="#429DD2"
                android:text="@string/websitelink"
                android:textColor="#429DD2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/memberButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:background="@drawable/rounded_button"
                android:layout_margin="15dp"
                android:layout_marginBottom="30dp"
                android:padding="12dp"
                android:fontFamily="@font/opensans_bold"
                android:textColor="#ffffff"
                android:text="Become a Member Today!" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>